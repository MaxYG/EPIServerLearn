
@using EPiServer.Core
@model EpiserverSiteWithEmpty.Models.Pages.SitePageData

<div class="block span4">
    <div class="border">
        start page page partial
        @if (Model.HasTemplate())
        {
            <a href="@Url.PageUrl(Model.LinkURL)">
                <h2>
                    @Model.PageName
                </h2>
                <p>@Html.PropertyFor(x => x.TeaserText)</p>
                <img src="@Url.ContentUrl(Model.PageImage)"/>
            </a>
        }
        else
        {
            <h2>@Model.PageImage</h2>
            <p>@Html.PropertyFor(x => x.TeaserText)</p>
            <img src="@Url.ContentUrl(Model.PageImage)"/>
        }
    </div>
</div>